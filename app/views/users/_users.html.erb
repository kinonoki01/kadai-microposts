<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="d-flex bg-white mb-3 p-2">
        <img class="rounded me-2" src="<%= gravatar_url(user, { size: 64 })%>" alt="">
        <div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user, class: 'text-decoration-none' %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy)%>
  </div>
<% end %>